server {
    listen 80;
    server_name language-explorer.wordspeak.org;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name language-explorer.wordspeak.org;

    add_header Content-Security-Policy "default-src 'self'; base-uri 'self'; form-action 'self' https://legacy.joshuaproject.net; frame-ancestors 'none'; frame-src *.vimeo.com; child-src *.vimeo.com; connect-src 'self'; img-src 'self' https://*.cloudinary.com https://*.tile.openstreetmap.org; media-src *.vimeo.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; report-uri https://wordspeak.report-uri.io/r/default/csp/enforce" always;

    location / {
        root   /var/www/htdocs/language-explorer.wordspeak.org;
        index  index.html;
    }

    location /.well-known/acme-challenge {
        alias /var/www/letsencrypt;
    }

    access_log  /var/www/logs/language-explorer.wordspeak.org-access.log;
    error_page 404 /pages/404.html;
}
