server {
    server_name staging.wordspeak.org;

    add_header Content-Security-Policy "default-src 'none'; base-uri 'self'; form-action 'none'; frame-ancestors 'none'; plugin-types 'none'; child-src https://*.vimeo.com; connect-src 'self'; img-src 'self' https://*.cloudinary.com; media-src https://*.vimeo.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; report-uri https://wordspeak.report-uri.io/r/default/csp/enforce;";

    location / {
        root   /var/www/htdocs/staging.wordspeak.org;
        index  index.html;
    }

    location /.well-known/acme-challenge {
        alias /var/www/letsencrypt;
    }

    access_log  /var/www/logs/staging.wordspeak.org-access.log;
    error_page 404 /pages/404.html;
}
